@model DataModel.SubjectModel

@{

    Layout = null;

}
<link href="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" />
<link href="@Url.Content("~/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.css")" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title" style="border:0">
                <div class="caption font-red-sunglo">
                    <i class="icon-settings font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> Enter subject details</span>
                </div>
                <div class="actions SubjectActions" style="display: @(Model.SubjectId == 0 ? "none" : "")">
                    <div class="btn-group">
                        <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown">
                            Actions
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-Subjectid="@Model.SubjectId" data-active="@(Model.IsActive??false)" onclick="javascript:ActivateSubject(this);">
                                    <i class="fa fa-pencil"></i> @(Model.IsActive??false ? "Deactivate" : "Activate")
                                </a>
                            </li>
                            <li>
                                <a data-subjectid="@Model.SubjectId" data-delete="@(Model.IsDeleted??false)" onclick="javascript:DeleteSubject(this);">
                                    <i class="fa fa-trash-o"></i> @(Model.IsDeleted??false ? "Restore" : "Delete")
                                </a>
                            </li>
                            <li class="divider"> </li>
                            <li>
                                <a href="javascript:;"> Make admin </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body form">

                <!-- BEGIN FORM-->
                <form id="frmCreateSubject@(Model.SubjectId)" method="post" action="@Url.Content("~/Subject/CreateSubject")" role="form" class="form-horizontal" novalidate="novalidate">
                    <div class="form-body col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Subject Name</label>
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.SubjectId)
                                @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control", placeholder = "Subject Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Description</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="multi-append" class="col-md-3 control-label">Choose Topics</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.TopicList, new List<SelectListItem>(Model.TopicList),
                               new { @multiple= "multiple", @class = "form-control select2", placeholder = "Topics" })

                                @Html.HiddenFor(model=> model.Topics)
                                @*<select id="multi-append" class="form-control select2" multiple>
                                    <option></option>
                                    <option value="A">A</option>
                                    <option value="B">B</option>
                                    <option value="C">C</option>
                                </select>*@
                                @*<span class="input-group-btn">
                                    <button class="btn btn-default" type="button" data-select2-open="multi-append">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-body col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Logo</label>
                            <div class="col-md-9">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                        <img src="@Url.Content(String.IsNullOrEmpty(Model.ImagePath) ? "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image": Model.ImagePath)" alt="" />
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                    <div>
                                        <span class="btn default btn-file">
                                            <span class="fileinput-new"> Select image </span>
                                            <span class="fileinput-exists"> Change </span>
                                            <input id="files" type="file" name="...">
                                        </span>
                                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                    <div class="form-actions" style="">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" data-formid="frmCreateSubject@(Model.SubjectId)" class="btn btn-circle green btnSubjectFormSubmit">Submit</button>
                                <button type="button" class="btn btn-circle grey-salsa btn-outline">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->

            </div>
        </div>


    </div>
</div>
<!-- BEGIN PAGE LEVEL PLUGINS -->

<script src="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/assets/global/plugins/select2/js/select2.full.min.js")" type="text/javascript"></script>*@

<script src="@Url.Content("~/Scripts/Custom/Subject/SubjectValidation.js")" type="text/javascript"></script>

<!-- ENDS PAGE LEVEL PLUGINS -->

<script>
    $(document).ready(function () {
        $('.select2').select2({ "width": "resolve" });
        $('.select2').select2({}).select2('val', '@(Model.Topics)'.split(','));  
    });

    var createSubjectUrl = "@Url.Content("~/Subject/CreateSubject")";
    var activateSubjectUrl = "@Url.Content("~/Subject/ActivateSubject")";
    var deleteSubjectUrl = "@Url.Content("~/Subject/DeleteSubject")";
</script>