@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .topic-item .btn-remove {
        float: right;
        top: 30px;
        position: relative;
    }
</style>
<link href="@Url.Content("~/theme/plugins/datatables-2.3.4/css/datatables.bootstrap.css")" rel="stylesheet" />
<link href="@Url.Content("~/theme/plugins/datatables-2.3.4/css/datatables.bootstrap5.min.css")" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">Manage Subject</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Subject</li>
                </ol>
            </div>
            <div class="col-md-2 mt-3">
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-primary" id="btnAddNewSubject">
                        Add New
                    </button>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="SubjectTable">
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="subjectModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title fs-5">Add/Update Subject</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body subjectModalBody">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.js")"></script>
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.bootstrap5.min.js")"></script>
    <script src="@Url.Content("~/scripts/custom/subject/subjectdatatable.js")"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
}

<script>
    var loadSubjectUrl = '@Url.Action("LoadSubjects", "Subject")';
    var createSubjectUrl = '@Url.Action("Create", "Subject")';
    var editSubjectUrl = '@Url.Action("Edit", "Subject")';
    var changeStatusUrl = '@Url.Action("ChangeStatus", "Subject")';
</script>
