@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Error - Examify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4><i class="bi bi-exclamation-triangle"></i> An Error Occurred</h4>
                    </div>
                    <div class="card-body">
                        <h5>@ViewBag.ErrorMessage</h5>
                        
                        @if (!string.IsNullOrEmpty(ViewBag.Path))
                        {
                            <p class="text-muted">Path: @ViewBag.Path</p>
                        }
                        
                        <hr />
                        
                        <details>
                            <summary>Technical Details</summary>
                            <pre class="mt-3 p-3 bg-light border">@ViewBag.ErrorDetails</pre>
                        </details>
                        
                        <div class="mt-4">
                            <a href="/" class="btn btn-primary">Go to Home</a>
                            <a href="javascript:history.back()" class="btn btn-secondary">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
