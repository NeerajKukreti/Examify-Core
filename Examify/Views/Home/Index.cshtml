@{
    ViewData["Title"] = "Examify - Online Exam Portal";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Examify - Online Exam Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow">
                    <div class="card-body text-center p-5">
                        <h1 class="mb-4">Welcome to Examify</h1>
                        <p class="lead mb-4">Online Examination Portal</p>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card border-primary">
                                    <div class="card-body">
                                        <h5 class="card-title">Student Login</h5>
                                        <p class="card-text">Take exams and view results</p>
                                        <a href="/Auth" class="btn btn-primary">Login as Student</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card border-success">
                                    <div class="card-body">
                                        <h5 class="card-title">Trainee Login</h5>
                                        <p class="card-text">Practice and prepare</p>
                                        <a href="/Auth" class="btn btn-success">Login as Trainee</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
