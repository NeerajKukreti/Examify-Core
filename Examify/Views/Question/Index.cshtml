@{
    ViewBag.Title = "Question Bank";
}
<!-- BEGIN PAGE LEVEL PLUGINS -->
<link href="@Url.Content("~/Scripts/Custom/Datatable/datatables.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Scripts/Custom/css/tabs.css")" rel="stylesheet" />
<link href="@Url.Content("~/Scripts/Custom/css/datatable.css")" rel="stylesheet" />
<link href="@Url.Content("~/assets/global/plugins/bootstrap-toastr/toastr.min.css")" rel="stylesheet" type="text/css" />
<!-- END PAGE LEVEL PLUGINS -->
@section scripts {
    <script src="@Url.Content("~/assets/global/scripts/datatable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/Datatable/datatables.min.js")"></script>
    <script src="@Url.Content("~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/global/plugins/bootstrap-tabdrop/js/bootstrap-tabdrop.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/tabs.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/QuestionBank/QuestionDatatable.js")" type="text/javascript"></script>
}
<style>
    .custom-modal {
        max-width: 110%; /* wider modal */
        height: 90vh; /* 90% of viewport height */
    }

</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Question Bank</span>
        </li>
    </ul>
    <div class="page-toolbar">
        <div id="dashboard-report-range" class="pull-right tooltips btn btn-sm" data-container="body" data-placement="bottom" data-original-title="Change dashboard date range">
            <i class="icon-calendar"></i>&nbsp;
            <span class="thin uppercase hidden-xs"></span>&nbsp;
            <i class="fa fa-angle-down"></i>
        </div>
    </div>
</div>
<h3 class="page-title" style="">
    Manage Question Bank
    <small></small>
</h3>

<!-- full width -->
<div id="questionModel" class="custom-modal modal container fade modal-scroll" tabindex="-1">
    <div class="questionModelBody">
       
    </div>
</div>

<div id="mainContentContainer" style="position:relative;">
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-title" style="display:none">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase"> Managed Table</span>
                    </div>
                    <div class="actions">
                        <div class="btn-group btn-group-devided" data-toggle="buttons">
                            <label class="btn btn-transparent dark btn-outline btn-circle btn-sm active">
                                <input type="radio" name="options" class="toggle" id="option1">Actions
                            </label>
                            <label class="btn btn-transparent dark btn-outline btn-circle btn-sm">
                                <input type="radio" name="options" class="toggle" id="option2">Settings
                            </label>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <button id="btnAddNewQuestion" class="btn sbold green">
                                        Add New
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="btn-group pull-right">
                                    <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                        Tools
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu pull-right">
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-print"></i> Print
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-pdf-o"></i> Save as PDF
                                            </a>
                                        </li>
                                        <li>
                                            <a href="javascript:;">
                                                <i class="fa fa-file-excel-o"></i> Export to Excel
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="QuestionBankTable">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>


@section Custom {
    <script>
        if (App.isAngularJsApp() === false) {
            jQuery(document).ready(function () {
                Tabs.init("#QuestionBankTab");


            });
        }
    </script>
}

<script>
    var createQuestionUrl = "@Url.Content("~/Question/Create")";
    var loadQuestionBankUrl = "@Url.Content("~/Question/LoadQuestion")";
    var editQuestionUrl = "@Url.Content("~/Question/Edit")";

