                                <span class="text-danger pair-error" id="valPairRight1"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-xs btn-remove-pair mt-4" title="Remove Pair">
                                <i class="glyphicon glyphicon-trash"></i> Remove
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Ordering Options Section -->
        <div class="ordering-section" id="ordering-section" style="display: none;">
            <div class="section-title">
                Ordering Items
            </div>
            <p class="text-muted mb-3">Add items that students will arrange in the correct order during the exam.</p>
            <div class="form-group">
                <button type="button" id="btnAddOrderItem" class="btn btn-outline-primary mb-3">
                    <i class="glyphicon glyphicon-plus"></i> Add Item
                </button>
                <span class="text-danger" id="orderOptionsValidation"></span>
            </div>
            <div id="orders-wrapper">
                <div class="form-group order-group" data-order-index="1">
                    <div class="order-label">Item 1</div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <textarea class="form-control order-item-input" rows="2" placeholder="Enter item text..."></textarea>
                                <input type="hidden" class="order-item-hidden" data-order-index="1" name="Orders[0].ItemText" />
                                <input type="hidden" class="order-id-hidden" data-order-index="1" name="Orders[0].OrderId" />
                                <input type="hidden" class="order-correct-hidden" data-order-index="1" name="Orders[0].CorrectOrder" value="1" />
                                <span class="text-danger order-error" id="valOrderItem1"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-danger btn-xs btn-remove-order-item mt-2" title="Remove Item">
                                <i class="glyphicon glyphicon-trash"></i> Remove
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-outline-primary mb-2" id="btnCancel" style="margin-top: 20px; margin-right: 10px;width: 80px;">
                Cancel
            </button>
            <button class="btn btn-outline-primary mb-2" style="margin-top: 20px; width: 80px;" type="submit">
                @(Model.QuestionId > 0 ? "Update" : "Add")
            </button>
        </div>

    </div>

</form>

