<!-- Shared JavaScript Modules -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css">
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.js"></script>

<script src="@Url.Content("~/Scripts/Custom/QuestionBank/QuestionTypeManager.js")"></script>
<script src="@Url.Content("~/Scripts/Custom/QuestionBank/FieldManager.js")"></script>
<script src="@Url.Content("~/Scripts/Custom/QuestionBank/QuestionForm.js")"></script>
<script src="@Url.Content("~/Scripts/Custom/QuestionBank/Question.js")"></script> 
<script src="@Url.Content("~/Scripts/Custom/QuestionBank/UnsavedWarning.js")"></script>
<script src="@Url.Content("~/theme/plugins/jquery-validation 1.19.5/jquery.validate.js")"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    var instituteId = "@ViewBag.instituteId";
    // Inject model data for edit mode and initialize the form
    @if (Model.QuestionId > 0)
    {
        @:window.modelData = @Html.Raw(JsonSerializer.Serialize(Model));
        @:// Ensure required arrays exist
        @:if (window.modelData) {
        @:    window.modelData.Options = window.modelData.Options || [];
        @:    window.modelData.Pairs = window.modelData.Pairs || [];
        @:    window.modelData.Orders = window.modelData.Orders || [];
        @:}
    }
    else
    {
        @:// New question - initialize with empty data
        @:window.modelData = {
        @:    QuestionId: 0,
        @:    SubjectId: null,
        @:    QuestionTypeId: null,
        @:    TopicId: null,
        @:    DifficultyLevel: 'Easy',
        @:    IsMultiSelect: false,
        @:    Options: [],
        @:    Pairs: [],
        @:    Orders: [],
        @:    ClassIds: []
        @:};
    }

    // Initialize tracking arrays
    window.existingImages = [];
    window.uploadedImages = [];
    window.deletedImages = [];
    if (window.modelData && window.modelData.QuestionId > 0) {
        var extractImages = function(html) {
            if (!html) return [];
            var div = document.createElement('div');
            div.innerHTML = html;
            var imgs = div.querySelectorAll('img');
            return Array.from(imgs).map(function(img) { return img.src.split('/').pop(); });
        };
        window.existingImages = window.existingImages.concat(
            extractImages(window.modelData.QuestionEnglish),
            extractImages(window.modelData.QuestionHindi),
            extractImages(window.modelData.AdditionalTextEnglish),
            extractImages(window.modelData.AdditionalTextHindi),
            extractImages(window.modelData.Explanation)
        );
        if (window.modelData.Options) {
            window.modelData.Options.forEach(function(opt) {
                window.existingImages = window.existingImages.concat(extractImages(opt.Text));
            });
        }
    }

    // Cancel button - delete only newly uploaded images
    $(document).on('click', '#btnCancel, .btn-close', function() {
        if (window.uploadedImages && window.uploadedImages.length > 0) {
            var newImages = window.uploadedImages.filter(function(img) {
                return window.existingImages.indexOf(img) === -1;
            });
            if (newImages.length > 0) {
                $.ajax({
                    url: '/Question/DeleteUploadedImages',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(newImages),
                    success: function() {
                        console.log('Deleted ' + newImages.length + ' orphaned images');
                    }
                });
            }
        }
    });

    // Delete removed images on submit
    $('#questionForm').on('submit', function() {
        if (window.deletedImages.length > 0) {
            $.ajax({
                url: '/Question/DeleteUploadedImages',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(window.deletedImages),
                async: false
            });
        }
        window.uploadedImages = [];
        window.deletedImages = [];
    });

    $(function () {
        var loadingTasks = { classes: false, form: false };
        
        function hideSkeletonWhenReady() {
            if (loadingTasks.classes && loadingTasks.form) {
                $('#skeletonLoader').hide();
                $('#questionForm').show();
                $('label .text-danger, .panel-title .text-danger').each(function() {
                    if ($(this).html().trim() === '') {
                        $(this).html('*');
                    }
                });
            }
        }

        (function loadClasses() {
            var endpoint = window.API_ENDPOINTS.baseUrl + "Class/GetAll/" + instituteId;

            $.ajax({
                url: endpoint,
                type: 'GET',
                success: function(res) {
                    if (res && res.Success && Array.isArray(res.Data)) {
                        var classes = res.Data;
                        var $select = $('#ClassIds');
                        $select.empty();

                        var items = classes.filter(function(c){ return c.IsActive === undefined || c.IsActive; })
                            .map(function(c){ return { id: String(c.ClassId), text: c.ClassName }; });

                        if ($select.hasClass('select2-hidden-accessible')) {
                            $select.select2('destroy');
                        }

                        var modal = $('#questionModel');
                        var dropdownParent = modal.length ? modal : $(document.body);
                        $select.select2({ 
                            data: items, 
                            placeholder: 'Select classes', 
                            width: '100%', 
                            dropdownParent: dropdownParent, 
                            closeOnSelect: false, 
                            allowClear: true,
                            minimumResultsForSearch: 0,
                            templateResult: function(item) {
                                if (!item.id) return item.text;
                                var selected = $select.val() || [];
                                if (selected.indexOf(item.id) > -1) {
                                    return null;
                                }
                                return item.text;
                            }
                        });
                        
                        $select.on('select2:select select2:unselect', function() {
                            $(this).select2('close');
                            $(this).select2('open');
                        });

                        // Preselect when editing
                        if (window.modelData && Array.isArray(window.modelData.ClassIds) && window.modelData.ClassIds.length > 0) {
                            var vals = window.modelData.ClassIds.map(function(x){ return String(x); });
                            $select.val(vals).trigger('change');
                        }
                    }
                    loadingTasks.classes = true;
                    hideSkeletonWhenReady();
                },
                error: function() {
                    console.error('Error loading classes');
                    loadingTasks.classes = true;
                    hideSkeletonWhenReady();
                }
            });
        })();

        if (window.QuestionForm && typeof window.QuestionForm.initialize === 'function') {
            window.QuestionForm.initialize(window.modelData);
            loadingTasks.form = true;
            hideSkeletonWhenReady();
        } else {
            console.warn('QuestionForm module not loaded. Falling back to legacy initialization.');
            legacyFormInitialization();
            loadingTasks.form = true;
            hideSkeletonWhenReady();
        }

        setTimeout(function() {
            var event = new CustomEvent('questionFormReady', {
                detail: {
                    isNewQuestion: !window.modelData || window.modelData.QuestionId === 0,
                    modelData: window.modelData
                }
            });
            document.dispatchEvent(event);
            

        }, 100);
    });



    function legacyFormInitialization() {
        if (window.modelData && window.modelData.QuestionId > 0) {
            $('#ddlSubject').val(window.modelData.SubjectId || '');
            $('#ddlQuestionType').val(window.modelData.QuestionTypeId || '');
            $('#ddlTopic').val(window.modelData.TopicId || '');
            $('#ddlDifficultyLevel').val(window.modelData.DifficultyLevel || '');
            $('#IsMultiSelect').prop('checked', !!window.modelData.IsMultiSelect);
            $('textarea[asp-for="Explanation"]').val(window.modelData.Explanation || '');
        }

        $(document).on('change', '#ddlSubject', function() {
            var subjectId = $(this).val();
            if (typeof loadTopics === 'function') {
                loadTopics(subjectId);
            }
        });
    }
</script>
