                    <div class="pair-label">Pair 1</div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label>Left Item</label>
                                <textarea class="form-control pair-left-input" rows="2" placeholder="Enter left item..."></textarea>
                                <input type="hidden" class="pair-left-hidden" data-pair-index="1" name="Pairs[0].LeftText" />
                                <input type="hidden" class="pair-id-hidden" data-pair-index="1" name="Pairs[0].PairId" />
