@{
    ViewData["Title"] = "My Exams";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="mb-0">My Exam</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="./">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Exam</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Exam History</h3>
            </div>
            <div class="card-body">
                <table id="userExamTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Exam Name</th>
                            <th>Exam Type</th>
                            <th>Status</th>
                            <th>Start Time</th>
                            <th>Submit Time</th>
                            <th>Percentage</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const userId = '@ViewBag.UserId';
    </script>
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.js")"></script>
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.bootstrap5.min.js")"></script>
    <script src="~/Scripts/Custom/ExamSession/UserExamDatatable.js"></script>
}
