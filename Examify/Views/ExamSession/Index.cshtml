@{
    ViewData["Title"] = "Exam Session";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3 class="mb-0">Exam Session</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="./">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Exam Session</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Available Exams</h3>
            </div>
            <div class="card-body">
                <table id="examTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Exam Name</th>
                            <th>Description</th>
                            <th>Duration (mins)</th>
                            <th>Total Questions</th>
                            <th>Exam Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.js")"></script>
    <script src="@Url.Content("~/theme/plugins/datatables-2.3.4/js/datatables.bootstrap5.min.js")"></script>
    <script src="~/Scripts/Custom/ExamSession/ExamSessionDatatable.js"></script>
}
