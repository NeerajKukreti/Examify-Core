@model DataModel.ExamModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.ExamName - Online Test Instructions</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f8;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .header-bar {
            background-color: #004c97;
            color: white;
            padding: 0.75rem 1rem;
            text-align: center;
            font-weight: 600;
            letter-spacing: 0.5px;
            font-size: 1.1rem;
        }

        .instruction-container {
            background: #fff;
            border: 1px solid #ccc;
            max-width: 900px;
            margin: 30px auto;
            border-radius: 4px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .instruction-header {
            padding: 1.25rem 2rem 0.5rem 2rem;
        }

            .instruction-header h5 {
                font-weight: 700;
                color: #000;
            }

            .instruction-header p {
                color: #d00;
                font-weight: 600;
            }

        .instruction-list {
            padding: 0 2rem;
            line-height: 1.8;
            color: #333;
        }

            .instruction-list li {
                margin-bottom: 0.5rem;
            }

        .legend-table {
            width: 100%;
            border-collapse: collapse;
            margin: 1rem 0;
            text-align: left;
        }

            .legend-table td {
                border: 1px solid #000;
                padding: 0.5rem 1rem;
                font-size: 0.95rem;
            }

        .legend-red {
            background-color: #ffcccc;
        }

        .legend-green {
            background-color: #b6e7b0;
        }

        .legend-yellow {
            background-color: #fff8b3;
        }

        .legend-violet {
            background-color: #e8d1ff;
        }

        .legend-gray {
            background-color: #dcdcdc;
        }

        .legend-white {
            background-color: #fff;
        }

        .footer-section {
            padding: 1rem 2rem 2rem 2rem;
        }

            .footer-section label {
                font-size: 0.95rem;
            }

            .footer-section select {
                width: 200px;
                display: inline-block;
                margin-left: 0.5rem;
            }

        .footer-buttons {
            text-align: center;
            margin-top: 1.5rem;
        }

        .btn-start {
            background-color: #004c97;
            color: white;
            font-weight: 600;
            padding: 0.75rem 2.5rem;
            font-size: 1.1rem;
            border-radius: 4px;
            border: none;
        }

            .btn-start:hover {
                background-color: #003b7a;
            }

        .footer-note {
            font-size: 0.9rem;
            color: #c00;
            margin-top: 0.5rem;
        }

        .bottom-bar {
            background-color: #004c97;
            color: #fff;
            text-align: center;
            padding: 0.4rem;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>

    <div class="detailsSection">
    <div class="header-bar">
        @Model.ExamName
    </div>

    <div class="instruction-container">
        <div class="instruction-header">
            <h5>Instruction for Online Test</h5>
            <p>Please read the instructions carefully before starting the test.</p>
        </div>

        <ol class="instruction-list">
            <li>Click <strong>Start Test</strong> at the bottom of your screen to begin the test.</li>
            <li>The clock has been set at server and count down timer at the top right side of the screen will display remaining time.</li>
            <li>Click one of the answers — simply click the desired option button.</li>
            <li>You can change your response anytime by selecting another answer before submitting.</li>
            <li>Click on <strong>Next</strong> to save and move to the next question.</li>
            <li>Click on <strong>Mark for Review</strong> to review your answer later.</li>
            <li>To select a question, click the question number on the right side of the screen.</li>
            <li>The colour coded diagram on the left side of the screen shows the status of each question:</li>
        </ol>

        <div class="px-4">
            <table class="legend-table">
                <tr><td class="legend-red" style="background-color: indianred;">Red</td><td>Not answered / Not Attempted Question</td></tr>
                <tr><td class="legend-green" style=" background-color: forestgreen;">Green</td><td>Answered / Attempted Question</td></tr>
                <tr><td class="legend-violet" style=" background-color: #6f42c1;">Violet</td><td>Answered & Marked for Review</td></tr>
                <tr><td class="legend-blue" style=" background-color: deepskyblue;">Blue</td><td>Not Visited</td></tr>
            </table>
        </div>

        <ol start="9" class="instruction-list">
            <li>You may shuffle between questions anytime during the exam as per your convenience.</li>
            <li>All answered questions will be counted for the final score.</li>
            <li>Do not click <strong>Final Submit</strong> until you have completed the exam. Once submitted, you cannot reattempt.</li>
            <li>Your score will be displayed immediately after the test.</li>
        </ol>

        <div class="footer-section">
            <div class="mb-3">
                <label>Choose your default language:</label>
                <select>
                    <option selected>English</option>
                    <option>Hindi</option>
                </select>
            </div>

           @*  <div class="form-check">
                <input class="form-check-input" type="checkbox" id="chkSystem" />
                <label class="form-check-label" for="chkSystem">
                    The computer provided to me is in proper working condition.
                </label>
            </div>

            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" id="chkRead" />
                <label class="form-check-label" for="chkRead">
                    I have read and understood the instructions given above.
                </label>
            </div> *@

            <div class="footer-buttons">
                <button data-examid="@Model.ExamId" type="button" class="btn btn-start startExam">
                    <i class="fas fa-play me-2"></i>Start Test
                </button>
                <div class="footer-note">
                    Please note: All questions may not appear in your default language.
                </div>
            </div>
        </div>
    </div>

    <div class="bottom-bar">© Addmen</div>
    </div>
    <div id="examSection" style="display:none;"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script src="@Url.Content("~/Scripts/Custom/ExamSession/Exam.js")"></script>
    <script src="@Url.Content("~/Scripts/Custom/ExamSession/Details.js")"></script>

    <script>
        // Preserve your existing global variables
        window.currentUserId = @(ViewBag.UserId ?? 1);
        window.examId = @ViewBag.ExamId;
        window.examUrls = {
            apiBaseUrl: '@Html.Raw(ViewBag.ApiBaseUrl ?? "https://localhost:7271/api/Exam")',
            startExamUrl: '@Html.Raw(ViewBag.StartExamUrl ?? "/Exam/StartExam")',
            examResultUrl: '@Html.Raw(ViewBag.ExamResultUrl ?? "/Exam/ExamResult")'
        };
    </script>
</body>
</html>
