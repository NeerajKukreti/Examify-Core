@model DataModel.StudentModel

@{

    Layout = null;

}
<link href="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" />
<link href="@Url.Content("~/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.css")" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title" style="border:0">
                <div class="caption font-red-sunglo">
                    <i class="icon-settings font-red-sunglo"></i>
                    <span class="caption-subject bold uppercase"> Enter Student details</span>
                </div>
                <div class="actions StudentActions" style="display: @(Model.StudentId == 0 ? "none" : "")">
                    <div class="btn-group">
                        <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown">
                            Actions
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li>
                                <a data-studentid="@Model.StudentId" data-active="@(Model.IsActive??false)" onclick="javascript:ActivateStudent(this);">
                                    <i class="fa fa-pencil"></i> @(Model.IsActive??false ? "Deactivate" : "Activate")
                                </a>
                            </li>
                            <li>
                                @* <a data-studentid="@Model.StudentId" data-delete="@(Model.IsDeleted??false)" onclick="javascript:DeleteStudent(this);">
                                    <i class="fa fa-trash-o"></i> @(Model.IsDeleted??false ? "Restore" : "Delete")
                                </a> *@
                            </li>
                            <li class="divider"> </li>
                            <li>
                                <a href="javascript:;"> Make admin </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body form">

                <!-- BEGIN FORM-->
                <form id="frmCreateStudent@(Model.StudentId)" method="post" action="@Url.Content("~/Student/CreateStudent")" role="form" class="form-horizontal" novalidate="novalidate">
                    <div class="form-body col-md-6">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Student Name</label>
                            <div class="col-md-9">
                                @Html.HiddenFor(model => model.StudentId)
                                @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control text-capitalize", placeholder = "Student Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Father's Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control text-capitalize", placeholder = "Father Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Date of Birth</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy-MM-dd}", new { @value = Model.DateOfBirth, @class = "form-control", placeholder = "DOB", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Category</label>
                            <div class="col-md-9">
                                @* @Html.DropDownListFor(model => model.Category, new List<SelectListItem>(Model.CategoryList), "Select Category", new { @class = "form-control", placeholder = "Category" }) *@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Address</label>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Address, new { @class = "form-control text-capitalize", placeholder = "Address" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">City</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.City, new { @class = "form-control text-capitalize", placeholder = "City" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">State</label>
                            <div class="col-md-9">
                                @* @Html.DropDownListFor(model => model.StateId, new List<SelectListItem>(Model.StateList), "Select State", new { @class = "form-control", placeholder = "City" }) *@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Pincode</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control", placeholder = "Pincode" })
                            </div>
                        </div>

                    </div>
                    <div class="form-body col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Passport Size Photo</label>
                            <div class="col-md-9">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="width: 120px; height: 150px;">
                                        @* <img src="@Url.Content(String.IsNullOrEmpty(Model.ImagePath) ? "http://www.placehold.it/120x150/EFEFEF/AAAAAA&amp;text=no+image": Model.ImagePath)" alt="" /> *@
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                    <div>
                                        <span class="btn default btn-file">
                                            <span class="fileinput-new"> Select image </span>
                                            <span class="fileinput-exists"> Change </span>
                                            <input id="files" type="file" name="...">
                                        </span>
                                        <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Email Id</label>
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email Id", type = "email" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mobile Number</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", placeholder = "Mobile Number", type = "number", maxlength = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Parent Mobile Number</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.ParentContact, new { @class = "form-control", placeholder = "Parent Mobile", type = "number", maxlength = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Secondary Mobile Number</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.SecondaryContact, new { @class = "form-control", placeholder = "Secondary Mobile", type = "number", maxlength = "10" })
                            </div>
                        </div>

                    </div>
                    <div class="form-actions" style="">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" data-formid="frmCreateStudent@(Model.StudentId)" class="btn btn-circle green btnStudentFormSubmit">Submit</button>
                                <button type="button" class="btn btn-circle grey-salsa btn-outline">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->

            </div>
        </div>


    </div>
</div>
<!-- BEGIN PAGE LEVEL PLUGINS -->\

<script src="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
<script src="@Url.Content("~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Custom/Student/StudentValidation.js")" type="text/javascript"></script>

<!-- ENDS PAGE LEVEL PLUGINS -->



<script>
    $(document).ready(function () {
        @*debugger;
        $("#files").fileinput('refresh', {
            uploadUrl: "@(Model.LogoPath)",
            autoOrientImage: true
        });*@
    });

    var createStudentUrl = "@Url.Content("~/Student/CreateStudent")";
    var activateStudentUrl = "@Url.Content("~/Student/ActivateStudent")";
    var deleteStudentUrl = "@Url.Content("~/Student/DeleteStudent")";
</script>