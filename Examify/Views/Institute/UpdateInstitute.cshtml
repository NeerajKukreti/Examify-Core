@model DataModel.InstituteModel

@{

    //Layout = null;
    string display = "block";
    if (Model.CallFrom != null)
    {
        display = "none";
    }


}
<link href="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css")" rel="stylesheet" />
<link href="@Url.Content("~/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.css")" rel="stylesheet" type="text/css" />

<div class="row profile-account">
    <div class="col-md-3">
        <ul class="ver-inline-menu tabbable margin-bottom-10">
            <li class="active">
                <a data-toggle="tab" href="#tab_1-1">
                    <i class="fa fa-cog"></i> Personal info
                </a>
                <span class="after">
                </span>
            </li>
            @*<li>
                    <a data-toggle="tab" href="#tab_2-2">
                        <i class="fa fa-picture-o"></i> Change Avatar
                    </a>
                </li>*@
            <li>
                <a data-toggle="tab" href="#tab_3-3">
                    <i class="fa fa-lock"></i> Change Password
                </a>
            </li>
            @*<li>
                    <a data-toggle="tab" href="#tab_4-4">
                        <i class="fa fa-eye"></i> Privacity Settings
                    </a>
                </li>*@
        </ul>
    </div>
    <div class="col-md-9">
        <div class="tab-content">
            <div id="tab_1-1" class="tab-pane active">
                <div class="portlet light bordered">
                    <div class="portlet-title" style="border:0">
                        <div class="caption font-red-sunglo">
                            <i class="icon-settings font-red-sunglo"></i>
                            <span class="caption-subject bold uppercase"> Institute details</span>
                        </div>

                    </div>
                    <div class="portlet-body form">

                        <!-- BEGIN FORM-->
                        <form id="frmCreateInstitute@(Model.InstituteId)" method="post" action="@Url.Content("~/Institute/CreateInstitute")" role="form" class="form-horizontal" novalidate="novalidate">
                            <div class="form-body col-md-6">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Institute Name</label>
                                    <div class="col-md-9">
                                        @Html.HiddenFor(model => model.InstituteId)
                                        @Html.TextBoxFor(model => model.InstituteName, new { @class = "form-control text-capitalize", placeholder = "Institute Name" })
                                    </div>
                                </div>
                                <div class="form-group" style="display: @(display);">
                                    <label class="col-md-3 control-label">Short Name</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.ShortName, new { @class = "form-control text-capitalize", placeholder = "Short Name" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Address</label>
                                    <div class="col-md-9">
                                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control text-capitalize", placeholder = "Address" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">City</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.City, new { @class = "form-control text-capitalize", placeholder = "City" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">State</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(model => model.StateId, new List<SelectListItem>(Model.StateList), "Select State", new { @class = "form-control", placeholder = "City" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Pincode</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control", placeholder = "Pincode" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Primary Contact</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.PrimaryContact, new { @class = "form-control", placeholder = "Primary Contact", type = "number", maxlength = "10" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Secondary Contact</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.SecondaryContact, new { @class = "form-control", placeholder = "Secondary Contact", type = "number", maxlength = "10" })
                                    </div>
                                </div>
                                <div class="form-group last" style="display: @(display);">
                                    <label class="col-md-3 control-label">Validity</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Validity, new { @class = "form-control", placeholder = "Validity", type = "date" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-body col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Logo</label>
                                    <div class="col-md-9">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                <img src="@Url.Content(String.IsNullOrEmpty(Model.LogoPath) ? "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image": Model.LogoPath)" alt="" />
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new"> Select image </span>
                                                    <span class="fileinput-exists"> Change </span>
                                                    <input id="files" type="file" name="...">
                                                </span>
                                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Email Id</label>
                                    <div class="col-md-9">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                            @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", placeholder = "Email Id", type = "email" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Phone</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Phone", type = "number", maxlength = "10" })
                                    </div>
                                </div>
                                <div class="form-group" style="display: @(display);">
                                    <label class="col-md-3 control-label">Password</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.Password, new
                                   {
                                       @class = "form-control",
                                       placeholder = "Password",
                                       @type = "password"

                                   })
                                    </div>
                                </div>
                                <div class="form-group" style="display: @(display);">
                                    <label class="col-md-3 control-label">Activate Date</label>
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(model => model.ActivationDate, "{0:yyyy-MM-dd}", new { @value = Model.ActivationDate, @class = "form-control", placeholder = "Activation Date", type = "date" })
                                    </div>
                                </div>

                            </div>
                            <div class="form-actions" style="">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="button" data-formid="frmCreateInstitute@(Model.InstituteId)" class="btn btn-circle green btnInstituteFormSubmit">Submit</button>
                                        <button type="button" class="btn btn-circle grey-salsa btn-outline">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->

                    </div>
                </div>
            </div>

            <div id="tab_3-3" class="tab-pane">

                @Html.PartialAsync("ChangePassword", "Institute")


            </div>
        </div>

    </div>
    <!--end col-md-9-->
</div>
<!-- BEGIN PAGE LEVEL PLUGINS -->
@section scripts {
    <script src="@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>*@
    <script src="@Url.Content("~/Scripts/Custom/Institute/InstituteValidation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Custom/Institute/InsUpdateInstitute.js")" type="text/javascript"></script>
}

<!-- ENDS PAGE LEVEL PLUGINS -->



