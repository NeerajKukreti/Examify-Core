    @{
        var accessTokenValue = Context.Request.Cookies["JWToken"];
        var refreshTokenValue = Context.Request.Cookies["RefreshToken"];
    }
    @if (!string.IsNullOrEmpty(accessTokenValue))
    {
    <script>
        (function() {
            var accessToken = '@accessTokenValue';
            var refreshToken = '@refreshTokenValue';
            var isRefreshing = false;
            var failedQueue = [];

            function processQueue(error, token = null) {
                failedQueue.forEach(prom => {
                    if (error) {
                        prom.reject(error);
                    } else {
                        prom.resolve(token);
                    }
                });
                failedQueue = [];
            }

            function refreshAccessToken() {
                return $.ajax({
                    url: window.API_ENDPOINTS.baseUrl + 'auth/refresh',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ RefreshToken: refreshToken })
                }).done(function(response) {
                    accessToken = response.AccessToken;
                    refreshToken = response.RefreshToken;
                    $.post('/Auth/UpdateTokens', { 
                        accessToken: accessToken, 
                        refreshToken: refreshToken 
                    });
                });
            }

            var originalAjax = $.ajax;
            $.ajax = function(settings) {
                // Add Authorization header to all API calls
                if (accessToken && settings.url) {
                    var isApiCall = settings.url.includes('/api/') || 
                                   settings.url.includes(window.API_BASE_URL) ||
                                   settings.url.startsWith('api/');
                    
                    if (isApiCall) {
                        var originalBeforeSend = settings.beforeSend;
                        settings.beforeSend = function(xhr) {
                            xhr.setRequestHeader('Authorization', 'Bearer ' + accessToken);
                            if (originalBeforeSend) {
                                originalBeforeSend.call(this, xhr);
                            }
                        };
                    }
                }

                var dfd = $.Deferred();
                originalAjax(settings)
                    .done(function(data, textStatus, jqXHR) {
                        dfd.resolve(data, textStatus, jqXHR);
                    })
                    .fail(function(jqXHR, textStatus, errorThrown) {
                        if (jqXHR.status === 401 && refreshToken && !isRefreshing) {
                            isRefreshing = true;
                            refreshAccessToken()
                                .done(function() {
                                    settings.beforeSend = function(xhr) {
                                        xhr.setRequestHeader('Authorization', 'Bearer ' + accessToken);
                                    };
                                    originalAjax(settings)
                                        .done(function(data, textStatus, jqXHR) {
                                            dfd.resolve(data, textStatus, jqXHR);
                                        })
                                        .fail(function(jqXHR, textStatus, errorThrown) {
                                            dfd.reject(jqXHR, textStatus, errorThrown);
                                        });
                                })
                                .fail(function() {
                                    window.location.href = '/Auth/Logout';
                                    dfd.reject(jqXHR, textStatus, errorThrown);
                                })
                                .always(function() {
                                    isRefreshing = false;
                                });
                        } else {
                            dfd.reject(jqXHR, textStatus, errorThrown);
                        }
                    });
                return dfd.promise();
            };
        })();
    </script>
    }

